{
  "manifest_version": 3,
  "name": "ページ情報コピー拡張機能",
  "version": "1.1",
  "description": "開いているページのタイトルとURLをクリップボードにコピーします。",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
